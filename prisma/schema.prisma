// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType = "wasm"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum City {
  WARSZAWA
  KRAKOW
  WROCLAW
  GDANSK
}

model Survey {
  id        Int      @id @default(autoincrement())
  city      City
  createdAt DateTime @default(now())

  @@index([city])
}
